<h3>I proposed to others</h3>
<table>
  <tr>
    <th>Post</th>
    <th>Your Trade</th>
    <th>Propose</th>
    <th>Status</th>
    <th>Cash offer</th>
  </tr>
  <!-- we can also use @proposals, but it has to be set in the parent view page. -->
  <% for proposal in my_proposals %>
    <tr>
      <% if proposal.post %>
		<td><%= link_to proposal.post.name, post_path(:id => proposal.post_id) %></td>
	  <% else %>
		<td>Not exist!</td>
	  <% end %>
      <% if proposal.trade_post %>
		<td><%= link_to proposal.trade_post.name, post_path(:id => proposal.trade_post_id) %></td>
	  <% else %>
		<td>Not exist!</td>
	  <% end %>	
      <td><%= proposal.propose %></td>
      <td><%= proposal.status_type %></td>
      <td><%= proposal.price %></td>
      <td><%= link_to "Show", proposal %></td>
      <td><%= link_to "Edit", edit_proposal_path(proposal) %></td>
      <td><%= link_to "Destroy", proposal, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>